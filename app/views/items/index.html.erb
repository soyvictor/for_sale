<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="column">

<% @items.each do |item| %>

  <%= link_to item_path(item) do%>
    <div class="item-box">
        <% if item.photos.attached? %>
          <%= cl_image_tag item.photos.first.key, width: 325, height: 240, crop: :pad,  class: "img-rounded", alt: "first slide" %>
        <% else %>
          <img src="https://picsum.photos/325/240" class="img-rounded" alt="">
        <% end %>
          <p class="item-name"><span class="item-name-underline"><%= item.name %></span><span class="price">$<%= item.price %></span></p> </div>
  <% end %>
  <% end %>
    </div>

    </div>

    </div>
