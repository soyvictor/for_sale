<header>
    <p class="intro-text" style="font-family: 'Open Sans', sans-serif;">Hey, I'm Victor.  These are things I'm selling in Mexico City, in municipio <a href="https://goo.gl/maps/ucpN1GPYwdz4CMPw6">Azcapotzalco</a>.  I may be able to deliver some items.  You can contact me on <a href="https://wa.me/15107099748">Whatsapp</a>.  ✌️</p>
</header>

<div class="main-container mt-3" align="center">

<div class="cards">
      <% carouselNumber = 0 %>
      <% @items.each do |item| %>
      <div>
        <%= link_to item_path(item) do%>
          <div class="item-box text-left" style="position: relative;">
            <% if item.photos.attached? %>
              <% if item.photos.attached? %>
                <div style="max-width: 325px; position: relative;">
                   <div id="carousel<%= carouselNumber %>" class="carousel slide carousel-slider" data-ride="carousel" data-interval="false" data-touch="false">
                    <div class="carousel-inner rounded mb-1" style="width: 100%; height: 240px !important;">
                      <div class="carousel-item active" style="cursor: pointer !important">
                        <%= cl_image_tag item.photos.first.key, width: 640, height: 480, crop: :pad, class: "d-block w-100 h-100 carousel-img img-rounded", alt: "first slide" %>
                      </div>

                      <% item.photos.drop(1).each do |photo| %>

                        <div class="carousel-item" style="cursor: pointer !important">
                          <%= cl_image_tag photo.key, width: 640, height: 480, crop: :pad,  class: "d-block w-100 h-100 carousel-img img-rounded", alt: "a slide" %>
                        </div>
                      <% end %>
                    </div>
                    <% if item.photos.length > 1 %>
                    <a class="carousel-control-prev" href="#carousel<%= carouselNumber %>" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <% end %>
                    <% if item.photos.length > 1 %>
                    <a class="carousel-control-next" href="#carousel<%= carouselNumber %>" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                    <% end %>
                  </div>
                </div>
                <% carouselNumber += 1 %>
                 <!-- <%= cl_image_tag item.photos.first.key, width: 325, height: 240, crop: :pad,  class: "img-rounded", alt: "first slide" %> -->
              <% end %>

            <% else %>
              <img src="https://picsum.photos/325/240" class="imgTest" alt="">
            <% end %>
            <% if item.photos.count > 1 %>
              <div class="image-counter display-image-count text-rounded" data-count="<%= item.photos.count %>">image 1 of <%= item.photos.count %></div>
            <% end %>
            <%= link_to item_path(item) do%><p class="item-name"><span class="item-name-underline"><%= item.name %></span><% end %><span class="price">$<%= item.price %></span></p>
            <p class="price corner-price">$<%= item.price %></p>
          </div>
        <% end %>
      </div>
      <% end %>
<!--
              <% if @items.length % 3 != 0  %>
          <div class="hide-this" style="width: 323px; height: 323px; display: hidden"></div>
        <% end %> -->
    </div>

</div>


<%= javascript_pack_tag 'carousels' %>
<%= javascript_pack_tag 'index' %>


